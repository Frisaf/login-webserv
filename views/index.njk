{% extends "layout.njk" %}

{% block content %}
{% include "components/header.njk" %}
<main class="wrapper">
    {% for post in posts %}
        <article>
            <header>
                <h2>{{ post.name }}</h2>
            </header>
            <p>{{ post.content }}</p>
            <footer>
                <p>Posted on {{ post.created_at }}</p>
            </footer>
        </article>
    {% else %}
        <h2>No posts available</h2>
    {% endfor%}

    <p><a href="/login">Login</a></p>
</main>
{% include "components/footer.njk" %}
{% endblock %}