{% extends "layout.njk" %}

{% block content %}
{% include "components/header.njk" %}
<main class="wrapper">
    {% for post in posts %}
        <a href="/posts/{{ post.id }}" class="postLink">
            <article>
                <header>
                    <h2>{{ post.title }}</h2>
                </header>
                <p>{{ post.content }}</p>
                <footer>
                    <p>Posted by <strong>{{ post.name }}</strong> on {{ post.created_at }}</p>
                </footer>
            </article>
        </a>
    {% else %}
        <h2>No posts available</h2>
    {% endfor %}    
</main>
{% include "components/footer.njk" %}
{% endblock %}